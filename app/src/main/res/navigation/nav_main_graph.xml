<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_graph"
    app:startDestination="@id/home_screen">

    <!-- Main Screens TOP LEVEL -->
    <fragment
        android:id="@+id/home_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.home.HomeFragment"
        android:label="@string/lb_screen_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentNotifications"
            app:destination="@id/notifications_screen" />
    </fragment>

    <fragment
        android:id="@+id/notifications_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.notifications.NotificationsFragment"
        android:label="@string/lb_screen_notifications"
        tools:layout="@layout/fragment_notification">
        <action
            android:id="@+id/action_fragmentNotifications_to_fragmentMenu"
            app:destination="@id/menu_screen"/>
    </fragment>

    <fragment
        android:id="@+id/settings_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.settings.SettingsFragment"
        android:label="@string/lb_screen_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/menu_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.menu.MenuFragment"
        android:label="@string/lb_screen_menu"
        tools:layout="@layout/fragment_menu" />

    <!-- Other Modules Nav Graphs -->
    <fragment
        android:id="@+id/vehicle_details_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.main.MotoDetailsFragment"
        android:label="@string/lb_screen_vehicle"
        tools:layout="@layout/fragment_details_vehicle">
        <!--  TODO: Deeplink -->
        <!--  Note: Example of xml Segue -->
        <argument
            android:name="selectedCar"
            app:argType=".models.Vehicle"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragmentA_to_fragmentB"
            app:destination="@id/moto_details_screen">
            <argument
                android:name="selectedCar"
                app:argType=".models.Vehicle"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/moto_details_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.main.VehicleDetailsFragment"
        android:label="@string/lb_screen_moto_details"
        tools:layout="@layout/fragment_details_moto">
        <argument
            android:name="selectedCar"
            app:argType=".models.Vehicle"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragmentB_to_fragmentC"
            app:destination="@id/car_details_screen">
            <argument
                android:name="selectedCar"
                app:argType=".models.Vehicle"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/car_details_screen"
        android:name="eu.jobernas.jetpacknavigation.ui.main.CarDetailsFragment"
        android:label="@string/lb_screen_car_details"
        tools:layout="@layout/fragment_details_car">
        <argument
            android:name="selectedCar"
            app:argType=".models.Vehicle"
            app:nullable="true" />
    </fragment>

    <!-- Include Graph looks like I can only Access to Entry point with help of segue-->

