<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main_graph"
    app:startDestination="@id/fragmentHome">
    <!-- Main Screens -->
    <fragment
        android:id="@+id/fragmentHome"
        android:name="eu.jobernas.jetpacknavigation.ui.main.home.FragmentHome"
        android:label="@string/fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentNotifications"
            app:destination="@id/fragmentNotifications" />
    </fragment>

    <fragment
        android:id="@+id/fragmentNotifications"
        android:name="eu.jobernas.jetpacknavigation.ui.main.notifications.FragmentNotifications"
        android:label="@string/fragment_notifications"
        tools:layout="@layout/fragment_notification">
        <action
            android:id="@+id/action_fragmentNotifications_to_fragmentMenu"
            app:destination="@id/fragmentMenu"/>
    </fragment>

    <fragment
        android:id="@+id/fragmentMenu"
        android:name="eu.jobernas.jetpacknavigation.ui.main.menu.MenuFragment"
        android:label="@string/fragment_menu"
        tools:layout="@layout/fragment_menu" />

    <!-- Other Modules Nav Graphs -->
    <fragment
        android:id="@+id/fragmentA"
        android:name="eu.jobernas.jetpacknavigation.ui.main.a.FragmentA"
        android:label="@string/fragment_a"
        tools:layout="@layout/fragment_a">
        <!--  TODO: Deeplink -->
        <!--  Note: Example of xml Segue -->
        <argument
            android:name="selectedCar"
            app:argType=".models.Car"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragmentA_to_fragmentB"
            app:destination="@id/fragmentB">
            <argument
                android:name="selectedCar"
                app:argType=".models.Car"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/fragmentB"
        android:name="eu.jobernas.jetpacknavigation.ui.main.b.FragmentB"
        android:label="@string/fragment_b"
        tools:layout="@layout/fragment_b">
        <argument
            android:name="selectedCar"
            app:argType=".models.Car"
            app:nullable="true" />
        <action
            android:id="@+id/action_fragmentB_to_fragmentC"
            app:destination="@id/fragmentC">
            <argument
                android:name="selectedCar"
                app:argType=".models.Car"
                app:nullable="true" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/fragmentC"
        android:name="eu.jobernas.jetpacknavigation.ui.main.c.FragmentC"
        android:label="@string/fragment_c"
        tools:layout="@layout/fragment_c">
        <argument
            android:name="selectedCar"
            app:argType=".models.Car"
            app:nullable="true" />
    </fragment>

    <!-- Include Graph looks like I can only Access to Entry point with help of segue-->

